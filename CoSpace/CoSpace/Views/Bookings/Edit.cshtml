@using CoSpace.Enums;
@model CoSpace.Data.Entities.Booking

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
<flash dismissable="true" />
<h4 style="font-family: 'Montserrat', sans-serif;">Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" style="font-family: 'Montserrat', sans-serif;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingState" class="control-label"></label>
                <div>
                    <select asp-for="BookingState" class="form-control">
                        @foreach (var item in Enum.GetValues(typeof(BookingState)))
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                    <span asp-validation-for="BookingState" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-success">Cancelar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
